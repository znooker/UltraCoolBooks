@page
@model UltraCoolBooks.Pages.Admin.Author.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "../_LayoutAdmin.cshtml";

}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Author.FirstName @Model.Author.LastName</h4>
    <img src="~/images/author-images/@Model.Author.ImagePath" style="width:150px;height:150px;" class="rounded-circle"/>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.ImagePath)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Author.AuthorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
