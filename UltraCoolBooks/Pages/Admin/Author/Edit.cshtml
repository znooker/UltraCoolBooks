@page
@model UltraCoolBooks.Pages.Admin.Author.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "../_LayoutAdmin.cshtml";

}

<h1>Edit</h1>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Author.AuthorId" />
            <div class="form-group">
                <label asp-for="Author.FirstName" class="control-label"></label>
                <input asp-for="Author.FirstName" class="form-control" />
                <span asp-validation-for="Author.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.LastName" class="control-label"></label>
                <input asp-for="Author.LastName" class="form-control" />
                <span asp-validation-for="Author.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.BirthDate" class="control-label"></label>
                <input asp-for="Author.BirthDate" type="date" class="form-control" />
                <span asp-validation-for="Author.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Created" class="control-label"></label>
                <input asp-for="Author.Created" class="form-control" readonly />
                <span asp-validation-for="Author.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                @if (!String.IsNullOrEmpty(Model.Author.ImagePath))
                {
                    <div class="d-flex flex-column">

                        <span class="text-muted">Current Image: @Model.Author.ImagePath </span>
                        <img src="~/images/author-images/@Model.Author.ImagePath" style="width:75px;height:75px;" alt="@Model.Author.FirstName @Model.Author.LastName"/>

                   </div>
                }
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
