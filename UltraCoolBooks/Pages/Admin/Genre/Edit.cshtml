@page
@model SuperCoolBooks.Pages.Admin.Genre.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "../_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Genre</h4>
<hr />



<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Genre.GenreId" />
            <div class="form-group mb-1">
                <label asp-for="Genre.Title" class="control-label"></label>
                <input type="text" asp-for="Genre.Title" class="form-control" placeholder="Genre Title" />
                <span asp-validation-for="Genre.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Genre.Description" class="control-label"></label>
                <textarea asp-for="Genre.Description" class="form-control" rows="8" placeholder="Genre Description"></textarea>
                <span asp-validation-for="Genre.Description" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="hidden" asp-for="Genre.Created" class="form-control" />
                <span asp-validation-for="Genre.Created" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


